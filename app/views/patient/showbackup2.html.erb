		<li><div class="nav-wedge"></div><a href="#history" data-toggle="tab">History</a><div class="nav-arrow"></div></li>
		<li><div class="nav-wedge"></div><a href="#contact" data-toggle="tab">Contact</a></li>
	</ul>

<!-- Tab panes -->
	<div class="tab-content">
	<div role="tabpanel" class="tab-pane active" id="info">
		<% @information.each do |f| %>
		<h4><b>Personal Information</b></h4>
		<div class="row">
			<div class="col-xs-3">
				<div class="col-xs-4">
					<label>Lastname</label>
				</div>
				<div class="col-xs-1">
					<label>:</label>
				</div>
				<div>
					<label class="lblinfo"><%= @patient.lname %></label>
				</div>
			</div>
			<div class="col-xs-3">
				<div class="col-xs-4">
					<label>Firstname</label>
				</div>
				<div class="col-xs-1">
					<label>:</label>
				</div>
				<div class="col-xs-6 btm-bord">
					<label class="lblinfo"><%= @patient.fname %></label>
				</div>
			</div>
			<div class="col-xs-3">
				<div class="col-xs-4">
					<label>Middlename</label>
				</div>
				<div class="col-xs-1">
					<label>:</label>
				</div>
				<div class="col-xs-6 btm-bord">
					<label class="lblinfo"><%= @patient.mi %></label>
				</div>
			</div>
			<div class="col-xs-3">
				<div class="col-xs-4">
					<label>Updated</label>
				</div>
				<div class="col-xs-1">
					<label>:</label>
				</div>
				<div class="col-xs-6 btm-bord">
					<label class="lblinfo"><%= @patient.updated_at.strftime("%D") %></label>
				</div>
			</div>
		</div>
		
		<div class="row">
		<div class="col-xs-12">
			<div class="col-xs-2">
					<label>Address&nbsp;&nbsp;&nbsp;:</label>
			</div>
			<div class="col-xs-8 btm-bord">
					<label class="lblinfo"><%= @patient.address %></label>
			</div>
		</div>
		</div>
		<br />
		<div class="row">
			<div class="col-xs-3" style='display: inline'>
				<div class="col-xs-4"><label>Occupation</label></div>
				<div class="col-xs-1">:</div>
				<div><label class="lblinfo"><%= f.occupation %></label></div>
			</div>

			<div class="col-xs-3">
				<label>Religion</label>
				:
				<label class="lblinfo"><%= f.religion %></label>
			</div>
			<div class="col-xs-3">
				<label>Civil Status</label>
				:
				<label class="lblinfo"><%= f.status %></label>
			</div>
			<div class="col-xs-3">
				<label>Sex</label>
				:
				<label class="lblinfo"><%= f.sex %></label>
			</div>
		</div>
		<br />
		<div class="row">
			<div class="col-xs-3">
				<label>Birth Date</label>
				:
				<label class="lblinfo"><%= f.bday %></label>
			</div>
			<div class="col-xs-3">
				<label>Age</label>
				:
				<label class="lblinfo"><%= f.age %></label>
			</div>
			<div class="col-xs-3">
				<label>Height</label>
				:
				<label class="lblinfo"><%= f.height %></label>
			</div>
			<div class="col-xs-3">
				<label>Weight</label>
				:
				<label class="lblinfo"><%= f.weight %></label>
			</div>
		</div>
		<br />
		<h4><b>Contact Numbers</b></h4>
		<div class="row">
			<div class="col-xs-3">
				<div class="col-xs-5"><label>Home</label></div>
				<div class="col-xs-1">:</div>
				<div style="text-align: left"><label class="lblinfo"><%= f.homephone %></label></div>
			</div>
			<div class="col-xs-3">
				<label>Business</label>
				:
				<label class="lblinfo"><%= f.businessphone %></label>
			</div>
			<div class="col-xs-3">
				<label>Mobile No.</label>
				:
				<label class="lblinfo"><%= f.mobilephone %></label>
			</div>
			<div class="col-xs-3">
				<label>Email</label>
				:
				<label class="lblinfo"><%= f.email %></label>
			</div>
		</div>
		<br/>
		<%= link_to raw("<span class='glyphicon glyphicon-pencil'></span> Edit"), '#', class: 'btn btn-default', id: 'infox' %>
	</div>
	<% end %>
	</br>

	<div role="tabpanel" class="tab-pane" id="history">History&hellip;</div>
	<div role="tabpanel" class="tab-pane" id="contact">Diagnosis&hellip;</div>

</div>

</div>
</div>
</div>
</div>

<script type="text/javascript">
$(document).ready(function(){

	$('#infox').click(function(){
	$("#info").html("<%= escape_javascript(render 'forminfo') %>");
})

	// var appoint_date = '2015-09-03';

	$('#information_bday').datetimepicker({
		format: 'YYYY-MM-DD'
		// defaultDate: appoint_date
	});
	// $('#appointment_appointment_date').datetimepicker('update', new Date());

$('#edit_information_<%= params[:id] %>').submit(function(event) {
	event.preventDefault();
	  var form = $(this);
	  $.ajax({
				type: 'POST',
				url: '<%= information_path(params[:id]) %>',
				data: form.serialize(),
				//processData: false,
	        	//contentType: false,
				success: function(){
					alert('Data updated!');
	        	},
							
			});
	});
});

</script>
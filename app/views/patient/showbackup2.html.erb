<div class="container" style="font-size: 13px">
	<br />
	<div class="row">
		<div class="col col-sm-2">
			<div>
				<%= image_tag @patient.image.url(:medium), class: 'img-thumbnail' %>
			</div>
			<div>
				<h3><%= @patient.fname + ' ' + @patient.mi.first + '. ' + @patient.lname  %></h3>
				<p> <%= @patient.address %></p>
				<br/>
				<div>
				<% render 'diagnosis/form' %>
				<%= link_to raw("<span class='glyphicon glyphicon-tasks'></span>"), patients_path, class: 'btn btn-default' %>

				<%= link_to raw("<span class='glyphicon glyphicon-user'></span>"), edit_patient_path(@patient), class: 'btn btn-default', remote: true, data: { toggle: 'modal', target: "#view" } %>
				<!-- link_to "Edit", "#", id: 'infox', class -->
				<!-- <input type="button" id="infox" class="btn btn-default" /> -->
				<%= link_to raw("<span class='glyphicon glyphicon-trash'></span>"), patient_path(@patient), method: :delete, data: { confirm: "Are you sure?" }, class: 'btn btn-danger' %>
				</div>
			</div>
			<div>
				<br/>Last Visit:
			</div>
		</div>
		<div class="col col-sm-10">



<div class="panel" style="height: 500px">
<!-- Nav tabs -->
	<ul class="nav nav-pills nav-wizard">

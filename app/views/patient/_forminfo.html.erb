<%= simple_form_for(@info, html: { class: 'form-horizontal' }) do |f| %>
<%= f.hidden_field :patient_id %>
<div class="row">
	<div class="col-xs-4">
		<div class="form-group">
			<%= f.label :occupation, nil, class: 'control-label col-sm-4', style: 'text-align: left' %>
			<div class="col-sm-8">
				<%= f.text_field :occupation, class: 'form-control input-sm', autofocus: true %>
			</div>
		</div>
		<div class="form-group">
			<%= f.label :sex, nil, class: 'pull-left control-label col-sm-4', style: 'text-align: left' %>
			<div class="col-sm-8">
				<%= f.select :sex, options_for_select([[ "Male", "Male"],["Female", "Female"]], @info.sex),{}, {class: 'form-control input-sm', style: 'font-size: 14px'} %>
			</div>
		</div>
		<div class="form-group">
			<%= f.label :mobilephone, 'Mobile No.', class: 'control-label col-sm-4', style: 'text-align: left' %>
			<div class="col-sm-8">
				<%= f.text_field :mobilephone, class: 'form-control input-sm' %>
			</div>
		</div>
		<div class="form-group">
			<%= f.label :referredby, 'Referred by', class: 'pull-left control-label col-sm-4', style: 'text-align: left' %>
			<div class="col-sm-8">
				<%= f.text_field :referredby, class: 'form-control input-sm' %>
			</div>
		</div>
	</div>
	<div class="col-xs-4">
		<div class="form-group">
			<%= f.label :bday, 'Birth Date', class: 'pull-left control-label col-sm-4', style: 'text-align: left' %>
			<div class="col-sm-8">
				<%= f.text_field :bday, class: 'form-control input-sm' %>
			</div>
		</div>
		<div class="form-group">
			<%= f.label :status, 'Status', class: 'pull-left control-label col-sm-4', style: 'text-align: left' %>
			<div class="col-sm-8">
				<%= f.select :status, options_for_select([[ "Single", "Single"],["Married", "Married"],["Separated", "Separated"],["Widow(er)", "Widow(er)"]], @info.status),{}, {class: 'form-control input-sm', style: 'font-size: 14px'} %>
			</div>
		</div>
		<div class="form-group">
			<%= f.label :businessphone, 'Business No.', class: 'pull-left control-label col-sm-4', style: 'text-align: left' %>
			<div class="col-sm-8">
				<%= f.text_field :businessphone, class: 'form-control input-sm' %>
			</div>
		</div>
	</div>
	<div class="col-xs-4">
		<div class="form-group">
			<%= f.label :age, nil, class: 'pull-left control-label col-sm-4', style: 'text-align: left' %>
			<div class="col-sm-8">
				<%= f.text_field :age, class: 'form-control input-sm' %>
			</div>
		</div>
		<div class="form-group">
			<%= f.label :spouse, nil, class: 'pull-left control-label col-sm-4', style: 'text-align: left' %>
			<div class="col-sm-8">
				<%= f.text_field :spouse, class: 'form-control input-sm' %>
			</div>
		</div>
		<div class="form-group">
			<%= f.label :homephone, 'Home Phone', class: 'pull-left control-label col-sm-4', style: 'text-align: left' %>
			<div class="col-sm-8">
				<%= f.text_field :homephone, class: 'form-control input-sm' %>
			</div>
		</div>
		<div class="pull-right">
			<%= button_tag(type: 'submit', class: "btn btn-default btn-xs") do %>
				<i class='glyphicon glyphicon-ok'></i> Update
			<% end %>
			<%= link_to raw("<i class='glyphicon glyphicon-remove'></i> Cancel"), @patients, class: 'btn btn-danger btn-xs', id: 'back' %> 
		</div>
	</div>
<% end %>

<script type="text/javascript">
$(function () {
	// var appoint_date = '2015-09-03';

	$('#information_bday').datetimepicker({
		format: 'YYYY-MM-DD'
		// defaultDate: appoint_date
	});

	// $('#appointment_appointment_date').datetimepicker('update', new Date());
});


</script>